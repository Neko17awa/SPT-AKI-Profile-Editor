<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="TransparentExpander"
        BasedOn="{StaticResource MahApps.Styles.Expander}"
        TargetType="Expander">
        <Setter Property="mah:HeaderedControlHelper.HeaderBackground" Value="Transparent" />
        <Setter Property="mah:HeaderedControlHelper.HeaderForeground" Value="{DynamicResource MahApps.Brushes.Text}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
</ResourceDictionary>