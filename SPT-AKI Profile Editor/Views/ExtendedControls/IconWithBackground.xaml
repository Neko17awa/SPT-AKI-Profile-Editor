<UserControl
    x:Class="SPT_AKI_Profile_Editor.Views.ExtendedControls.IconWithBackground"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Control"
    mc:Ignorable="d">
    <Border
        Background="{Binding ElementName=Control, Path=Color}"
        BorderBrush="{Binding ElementName=Control, Path=Color}"
        BorderThickness="1"
        CornerRadius="5">
        <Image
            Margin="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            DockPanel.Dock="Left"
            Source="{Binding ElementName=Control, Path=Source}" />
    </Border>
</UserControl>