<UserControl
    x:Class="SPT_AKI_Profile_Editor.Views.ExtendedControls.EmptyDataPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SPT_AKI_Profile_Editor.Views.ExtendedControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Control"
    mc:Ignorable="d">
    <Border Background="{DynamicResource MahApps.Brushes.Window.Background}">
        <Label
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold">
            <Label.Content>
                <TextBlock
                    Text="{Binding ElementName=Control, Path=Text, FallbackValue=Empty Data}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Label.Content>
        </Label>
    </Border>
</UserControl>
